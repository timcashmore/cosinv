<mvc:View
	controllerName="cosinv.cosinv.controller.ProdUpload"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	class="viewPadding">
	<Page 
		title="{i18n>prodUploadTitle}" 
		class="sapUiResponsiveContentPadding"
		id="prodUploadPage"
		showNavButton="true"
		navButtonPress=".onNavBack">
		<content>
			<l:VerticalLayout>
				<u:FileUploader
					id="fileUploader"
					name="myFileUpload"
					uploadUrl="api/produpload"
					tooltip="{i18n>prodUploadToolTip}"
					sendXHR="true"
					fileType="csv"
					uploadComplete="handleUploadComplete"/>
				<Button
					text="Upload File"
					press="handleUploadPress"/>
				<Text 
					text="{i18n>prodUploadText}" 
					width="50rem"/>
			</l:VerticalLayout>
			
		</content>
	</Page>
</mvc:View>